<h2> Your Customers </h2>
<!-- Cannot create customer if you don't have accesses -->
<% if !@user_accesses.empty?%>
  <a class="btn btn-primary" href="/customers/new"> Create Customer </a>  
<%end%>

<%i=1%>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">VAT Number</th>
      <th scope="col">Street Name</th>
      <th scope="col">City</th>
      <th scope="col">Post Code</th>
      <th scope="col">Country</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  <%@customers.each do |customer| %>
    <tr>
      <th scope="row"><%=i%></th>
      <td><%=customer.name%></td>
      <td><%=customer.vat_number%></td>
      <td><%=customer.street%></td>
      <td><%=customer.city%></td>
      <td><%=customer.post_code%></td>
      <td><%=customer.country.name%></td>
      <td>
        <a class="btn btn-primary" href="/entities/<%=customer.entity_id%>/customers/<%=customer.id%>/edit"> Edit </a>  
      </td> 
    </tr>
    <%i += 1%>
    <%end%>
  </tbody>
</table>