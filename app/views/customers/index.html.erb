<h2> Your Customers </h2>
<a class="btn btn-primary" href="./customers/new"> Create Customer </a>  

<%i=1%>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">VAT Number</th>
      <th scope="col">Street Name</th>
      <th scope="col">City</th>
      <th scope="col">Post Code</th>
      <th scope="col">Country</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  <%@customers.each do |customer| %>
    <tr>
      <th scope="row"><%=i%></th>
      <td><%=customer.name%></td>
      <td><%=customer.vat_number%></td>
      <td><%=customer.street%></td>
      <td><%=customer.city%></td>
      <td><%=customer.post_code%></td>
      <td><%=customer.country.name%></td>
      <td>
        <a class="btn btn-light" href="./entity_tax_codes/"> Open </a>
        <a class="btn btn-primary" href="./entity_tax_codes/edit"> Edit </a>  
        <a class="btn btn-danger" href="./transactions//delete_transaction" onclick="return confirm('Are you sure?')"> Delete </a>
      </td> 
    </tr>
    <%i += 1%>
    <%end%>
  </tbody>
</table>