<h2> Vos Clients </h2>
<a class="btn btn-primary" href="./clients/new"> Créer un Client </a>  

<%i=1%>

<table class="table table-hover" style="text-align: center">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nom</th>
      <th scope="col">Numéro de TVA</th>
      <th scope="col">Rue</th>
      <th scope="col">Ville</th>
      <th scope="col">Code Postal</th>
      <th scope="col">Pays</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  <%@customers.each do |customer| %>
    <tr>
      <th scope="row"><%=i%></th>
      <td><%=customer.name%></td>
      <td><%=customer.vat_number%></td>
      <td><%=customer.street%></td>
      <td><%=customer.city%></td>
      <td><%=customer.post_code%></td>
      <% country = LanguageCountry.where( language_id: current_user.language.id, country_id: customer.country.id)[0] %>
      <td><%=country.name%></td>
      <td>
        <a class="btn btn-primary" href="./clients/<%=customer.id%>/edit"> Modifier </a>  
      </td> 
    </tr>
    <%i += 1%>
    <%end%>
  </tbody>
</table>
