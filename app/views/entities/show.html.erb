<h1> <%=@entity.name%> </h1>

<ul>
    <li>Jurisdiction: <%=@entity.country.name%> </li>
    <li>Address: <%=@entity.address%></li>
    <li>Email: <%=@entity.email%></li>
    <li>Website: <%=@entity.website%></li>
    <li>Postal Code: <%=@entity.postal_code%></li>
    <li>City: <%=@entity.city%></li>
    <li>Phone Number: <%=@entity.phone_number%></li>
    <li>VAT Number: <%=@entity.vat_number%></li>
    <li>IBAN: <%=@entity.iban%></li>
    <li>BIC Number: <%=@entity.bic%></li>
</ul>

<h2> Entities Returns </h2>
<%i=1%>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Entity Name</th>
      <th scope="col">Jurisdiction</th>
      <th scope="col">Project Type</th>
      <th scope="col">Periodicity</th>
      <th scope="col">Start Date</th>
      <th scope="col">End Date</th>
      <th scope="col">Due Date</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  <%@returns.each do |company_return| %>
    <tr>
      <th scope="row"><%=i%></th>
      <td><%=company_return.entity.name%></td>
      <td><%=company_return.entity.country.name%></td>
      <td><%=company_return.project_type.name%></td>
      <td><%=company_return.periodicity.name%></td>
      <td><%=company_return.begin_date%></td>
      <td><%=company_return.end_date%></td>
      <td><%=company_return.due_date.due_date%></td>
      <td>

        <a class="btn btn-light" href="/companies/<%=company_return.entity.company.id %>/entities/<%=company_return.entity_id%>/returns/<%=company_return.id%>"> Open </a>
        <%= button_to "Delete", { action: "destroy", id: company_return.id }, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger"  %>
      </td> 
    </tr>
    <%i += 1%>
    <%end%>
  </tbody>
</table>

<a class="btn btn-primary" href="./<%=@entity.id%>/edit"> Edit </a>

