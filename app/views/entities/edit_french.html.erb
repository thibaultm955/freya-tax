<h1> Modifier votre Entité </h1>

<form action="./update">

    <%= label_tag 'Nom'%>
    <%= text_field_tag :name, @entity.name, class:"form-control"%> 

    <%= label_tag 'Adresse'%>
    <%= text_field_tag :address, @entity.address, class:"form-control"%> 

    <%= label_tag 'Postal Code'%>
    <%= text_field_tag :postal_code, @entity.postal_code, class:"form-control"%> 

    <%= label_tag 'Ville'%>
    <%= text_field_tag :city, @entity.city, class:"form-control"%> 

    <%= label_tag 'Email'%>
    <%= text_field_tag :email, @entity.email, class:"form-control"%> 

    <%= label_tag 'Numéro de TVA'%>
    <%= text_field_tag :vat_number, @entity.vat_number, class:"form-control"%> 

    <%= label_tag 'Numéro de Téléphone'%>
    <%= text_field_tag :phone_number, @entity.phone_number, class:"form-control"%> 

    <%= label_tag 'IBAN'%>
    <%= text_field_tag :iban, @entity.iban, class:"form-control"%> 

    <%= label_tag 'BIC'%>
    <%= text_field_tag :bic, @entity.bic, class:"form-control"%> 

    <input type="submit" value="Sauvegarder" class="btn btn-primary">

</form>
