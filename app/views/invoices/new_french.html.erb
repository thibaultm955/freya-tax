<div class="container mt-5">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5 offset-sm-4">
      <h1  style='font-size: 25px; text-align: center'> Create a new Invoice </h1>
      <div data-controller="invoice">
        <form action="./create">

            <%= label_tag "Nom de la Facture" %>
            <%= text_field_tag :invoice_name, "", class:"form-control" %>

            <%= label_tag "Entité" %>
            <%= select_tag :entity,
            options_from_collection_for_select(@entities, "id", "name"),
            include_blank: true, 
            class:"form-control" %>
                </br>

            <%= label_tag "Date de la Facture"%>
            <%= text_field_tag :invoice_date, @invoice.invoice_date, class:"form-control datepicker_full"%> 

            <%= label_tag 'Date de Paiement'%>
            <%= text_field_tag :payment_date, @invoice.payment_date, class:"form-control datepicker_full"%> 

            <%= label_tag 'Numéro de Facture'%>
            <%= text_field_tag :invoice_number, @invoice.invoice_number, class:"form-control"%> 

            <%= label_tag :client %>
            <%= select_tag :customer,
            options_from_collection_for_select(@customers, "id", "name"),
            include_blank: true,
            class: "form-control" %>

      <br/>


        <div id="myList">
        
        <div data-invoice-target="other" >
        </div>
        
        </div>

                
        <input class="btn btn-primary" type="button" value="Ajouter une Transaction" data-action="click->invoice#add_item">


              
          <input type="submit" value="Sauvegarder" class="btn btn-primary">
        </form>


      </div>

    </div>  
  </div>
</div>