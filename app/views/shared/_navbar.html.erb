<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_url, class: "navbar-brand" do %>

    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <%= link_to "Homepage", root_path , class: "dropdown-item"%>
        <%if !current_user.company.nil? %>
          <%= link_to "My Company", company_path(current_user.company), class: "dropdown-item" %>
          <%= link_to "My Declarations", company_returns_path(current_user.company), class: "dropdown-item"%>
          <%= link_to "My Tax Codes", company_entity_tax_codes_path(current_user.company), class: "dropdown-item"%>
          <%= link_to "My Invoices", company_invoices_path(current_user.company), class: "dropdown-item"%>
          <%= link_to "My Dashboard", "#", class: "dropdown-item"%>
          
                
          <li class="nav-item dropdown">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "My Account", user_path(current_user.id), class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <%end%>
      <% else %>
         <li class="nav-item">
          <%= link_to "Discover", new_user_session_path, class: "nav-link" %>
        </li>
         <li class="nav-item">
          <%= link_to "Pricing", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>

      <% end %>
    </ul>
  </div>
</div>
