<h1> Welcome </h1>
<p> Name of the company: <%=@company.name%> </p>
<p> Jurisdiction of the company: <%= @company.country.name%> </p>
<% i = 1 %>
<% if @entities != [] %>
    <h2 class="text-center"> My Entities </h2>
    <table class="table table-hover">
        <thead>
            <tr>
            <th class="text-center" scope="col">#</th>
            <th class="text-center" scope="col">Entity Name</th>
            <th class="text-center" scope="col">Jurisdiction</th>
            <th class="text-center" scope="col">VAT Number</th>
            <th class="text-center" scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            <% @entities.each do |entity| %>
                <tr>
                <th class="text-center" scope="row"><%=i%></th>
                <td class="text-center"><a href='../companies/<%=current_user.company.id%>/entities/<%=entity.id%>'> <%=entity.name%></a></td>
                <td class="text-center"><%=entity.country.name%></td>
                <td class="text-center"><%=entity.vat_number%></td>
                 <td>
                 <a class="btn btn-light" href='../companies/<%=current_user.company.id%>/entities/<%=entity.id%>'> Open </a>
                 <a class="btn btn-primary" href='./<%=@company.id%>/entities/<%=entity.id%>/edit'> Edit </a>
                <%#<a href="./<%=@company.id%><%#/entities/<%=entity.id%><%#/edit"> <i class="fas fa-edit"></i> </a>%>
                
                 <%= button_to "Delete the Entity", { action: "destroy", id: entity.id }, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger"  %>
                    
                   </td> 
                </tr>
                <%i += 1%>
            <%end%>
        </tbody>
    </table>
<%end%>
<a href="<%=new_company_entity_path(@company.id)%>">Create a new Entity</a>
    

