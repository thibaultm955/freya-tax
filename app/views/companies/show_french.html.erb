<% i = 1 %>
<% if @entities != [] %>
    <h2 class="text-center"> Entités </h2>
    <table class="table table-hover" style="text-align: center">
        <thead>
            <tr>
            <th class="text-center" scope="col">#</th>
            <th class="text-center" scope="col">Nom de l'Entité</th>
            <th class="text-center" scope="col">Juridiction</th>
            <th class="text-center" scope="col">Numéro de TVA</th>
            <th class="text-center" scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            <% @entities.each do |entity| %>
                <tr>
                <th class="text-center" scope="row"><%=i%></th>
                <td class="text-center"><a href='../entreprises/<%=current_user.company.id%>/entites/<%=entity.id%>'> <%=entity.name%></a></td>
                <% country = LanguageCountry.where( language_id: current_user.language.id, country_id: entity.country.id)[0] %>
                <td class="text-center"><%=country.name%></td>
                <td class="text-center"><%=entity.vat_number%></td>
                 <td>
                 <a class="btn btn-light" href='../entreprises/<%=current_user.company.id%>/entites/<%=entity.id%>'> Ouvrir </a>
                 <a class="btn btn-primary" href='./<%=@company.id%>/entites/<%=entity.id%>/edit'> Modifier </a>

                    
                   </td> 
                </tr>
                <%i += 1%>
            <%end%>
        </tbody>
    </table>
<%end%>


