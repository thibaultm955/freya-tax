<h1>Declaration for <%=@entity.name%> </h1>
<ul>
    <li><%=@declaration.start_date%> - <%=@declaration.end_date%> - <%=@declaration.type_of_project%></a></li>
</ul>

<a class="btn btn-primary" href="../declarations/<%=@declaration.id%>/edit"> Edit </a>  
<a class="btn btn-primary" href="<%=company_declaration_transactions_path(current_user.company_id, @declaration.id)%>"> See all transactions </a>  
<a class="btn btn-primary" href="<%=new_company_declaration_transaction_path(current_user.company_id, @declaration.id)%>"> Add a transaction </a>  


<p>First 10 Transactions</p>



    

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Tax Code Name</th>
      <th scope="col">Business Partner Name</th>
      <th scope="col">Business Partner VAT Number</th>
      <th scope="col">Gross Amount</th>
      <th scope="col">Net Amount</th>
      <th scope="col">VAT Amount</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  <%i = 1%>
    <%@transactions.each do |transaction|%>
        <tr>
            <th scope="row"><%=i%></th>
            <td><%=transaction.assigned_tax_code.name%></td>
            <td><%=transaction.business_partner_name%></td>
            <td><%=transaction.business_partner_vat_number%></td>
            <td><%=transaction.gross_amount%></td>
            <td><%=transaction.net_amount%></td>
            <td><%=transaction.vat_amount%></td>
            <td>
                 <a class="btn btn-primary" href="./<%=@declaration.id%>/transactions/<%=transaction.id%>/edit"> Edit </a>
                 <a class="btn btn-danger" href="./<%=@declaration.id%>/transactions/<%=transaction.id%>.delete"> Delete </a>
                
                    
                   </td> 
        </tr>
        <%i += 1%>
   <%end%>
  </tbody>
</table>

