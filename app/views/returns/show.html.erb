<table class="table">

  <tbody>
  <%i = 1%>
    <% @return_boxes.each do |return_box| %>
        <tr>
          <% if return_box.box_name.name[0..2] == "Box" %>
            <td><%=return_box.box_name.name%></td>
            <td><%=return_box.amount%></td>
          <% else %>
            <td><%=return_box.box_name.name%></td>
            <td></td>
          <% end%>
            <td>
                 <a class="btn btn-primary" href="./return_boxes/<%=return_box.id%>/edit"> Manually Update the Amount </a>   
            </td> 
        </tr>
        <%i += 1%>
   <%end%>
  </tbody>
</table>

